package br.com.leovictor.financeiro.integrationTest;


import org.springframework.http.HttpEntity;
import org.springframework.http.HttpHeaders;
import org.springframework.http.MediaType;

public class Util {
	private static HttpHeaders createJsonHeaders(String token) {
		HttpHeaders httpHeaders = new HttpHeaders();
		httpHeaders.setContentType(MediaType.APPLICATION_JSON);
		if (token != null) {
			httpHeaders.setBearerAuth(token);
		}
		return httpHeaders; 
	}
	public static <T> HttpEntity<T> createJsonHttpEntity(T entity, String token = null) {
		return new HttpEntity<>(entity, createJsonHeaders(token));
	}
}
